<style>
    main{
        display: flex;
        flex-direction: column; 
        justify-content: center; 
        align-items: center;
        gap: 1rem; 
        /* width: 100vw; 
        height: 100vh;
        min-height: 100vh;
        position: relative; */
        flex: 1;
    }
    
    h1{
        font-size: 3rem;
        font-weight: normal; 
        font-family: 'Poppins', sans-serif;
        color: white;
        margin: 0; 
    }

    h3{
        font-size: .8rem;
        font-weight: 100; 
        font-family: 'Poppins', sans-serif;
        color: white;
        margin: 0; 
        padding: .4rem 1rem;
        background-color: rgb(76, 76, 76);
        border-radius: 20px;
    }

    .contentSlogan{
        display: flex;
        flex-direction: column; 
        align-items: center;
        margin: 0; 
    }

    .slogan{
        font-size: 2rem;
        font-weight: 100; 
        color: white;
        margin: 0;         
    }

    .description{
        font-size: 1rem;
        font-weight: 100; 
        color: white;
        max-width: 380px;
        text-align: left;
    }

    .buttonContactar{
        margin-top: 1rem;
        padding: .8rem 1.5rem;
        background-color: rgb(255, 255, 255);
        color: rgb(0, 0, 0);
        text-decoration: none;
        border-radius: 12px;
        font-weight: 500;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s,transform 0.5s;
    }

    .buttonContactar:hover{
        box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
        transform: scale(1.1);
    }
    
     @media (max-width: 500px) {
        main{
            justify-content: flex-start;
            gap: .5rem;
            top: 5vh;
        }

        .slogan{
            font-size: 1.7rem; 
        }

        h1{
            font-size: 2rem;
        }

         h3{
            font-size: .6rem;
            padding: .1rem 1.5rem;
        }       

        .description{
            font-size: 1rem;
            max-width: 80%;
            /* text-align: ; */
        }

        .buttonContactar{
            font-size: 1rem;
            padding: .4rem 1.5rem;
            margin: 0;
            border-radius: 4px;
        }
    }

       
    

    @media (min-width: 2000px) {
        main{
            gap: 3rem;
        }

        h1{
            font-size: 6rem;
        }

         h3{
            font-size: 1.5rem;
            padding: .8rem 2rem;
        }

        .slogan{
            font-size: 5rem; 
        }

        .description{
            font-size: 1.5rem;
            max-width: 800px;
            margin: 0;
            /* text-align: center; */
        }

        .buttonContactar{
            font-size: 2rem;
            padding: 1rem 2rem;
            margin: 0;
        }
    }

</style>